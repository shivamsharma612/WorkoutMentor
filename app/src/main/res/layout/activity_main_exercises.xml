<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_exercises"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.neu.shusky.sharma.mentorworkout.MainActivityExercises">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/back"
        android:id="@+id/imageView2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:onClick="buttonClickFunction4"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/shoulder"
        android:layout_marginBottom="51dp"
        android:id="@+id/imageView1"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:onClick="buttonClickFunction6"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/legs"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:id="@+id/imageView5"
        android:onClick="buttonClickFunction3"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/arm"
        android:id="@+id/imageView4"
        android:layout_alignTop="@+id/imageView"
        android:onClick="buttonClickFunction2"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/abs"
        android:layout_alignTop="@+id/imageView1"
        android:layout_alignLeft="@+id/imageView5"
        android:layout_alignStart="@+id/imageView5"
        android:id="@+id/imageView6"
        android:onClick="buttonClickFunction5"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/chest"
        android:id="@+id/imageView"
        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="buttonClickFunction"/>

    <TextView
        android:id="@+id/TxtPoints1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHEST"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:onClick="buttonClickFunction"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/TxtPoints2"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/imageView2"
        android:onClick="buttonClickFunction4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOULDERS"
        android:id="@+id/TxtPoints3"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/imageView2"
        android:layout_alignStart="@+id/imageView2"
        android:layout_below="@+id/imageView6"
        android:onClick="buttonClickFunction6"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ARMS"
        android:id="@+id/TxtPoints4"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_below="@+id/imageView4"
        android:onClick="buttonClickFunction2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEGS"
        android:id="@+id/TxtPoints5"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_below="@+id/imageView5"
        android:onClick="buttonClickFunction3"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABS"
        android:id="@+id/TxtPoints6"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_below="@+id/imageView6"
        android:onClick="buttonClickFunction5"/>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:rotation="90"
        android:src="@drawable/barbell"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView5"
        android:layout_toEndOf="@+id/imageView5" />

</RelativeLayout>
